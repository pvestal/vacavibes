rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow read and write if the logged-in user's ID matches the userId in the document path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Match any document in the 'submissions' collection
    match /submissions/{submissionId} {
      // Allow read access to any user who is authenticated
      allow read: if request.auth != null;

      // Allow a user to create a submission if they are logged in and correctly structure the 'submittedBy' and 'visibleTo' fields
      allow create: if request.auth != null && request.resource.data.submittedBy.uid == request.auth.uid;

      // Allow updates only if the user trying to update is the one who submitted or is listed in `visibleTo`
      // Make sure to access `submittedBy.uid` and check the array correctly
      allow update: if request.auth != null && (request.resource.data.submittedBy.uid == request.auth.uid || request.resource.data.visibleTo.hasAny([request.auth.uid]));

      // Allow deletes only if the user is the one who originally submitted the submission
      // Again, access `submittedBy.uid` correctly
      allow delete: if request.auth != null && request.resource.data.submittedBy.uid == request.auth.uid;
    }
  }
}
